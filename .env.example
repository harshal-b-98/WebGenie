# ========================================
# NextGenWeb Environment Variables
# ========================================
# Copy this file to .env.local for development
# Configure these in Vercel Dashboard for production

# ----------------------------------------
# Supabase Configuration (Required)
# ----------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ----------------------------------------
# AI Provider API Keys (Required)
# ----------------------------------------
# OpenAI - Used for embeddings and page generation
OPENAI_API_KEY=sk-your_openai_api_key

# Anthropic - Used for Claude-based generation (optional but recommended)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# ----------------------------------------
# Application URL (Required)
# ----------------------------------------
# Development: http://localhost:3000
# Production: Your actual domain (e.g., https://nextgenweb.com)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------------------
# Vercel Integration (Optional)
# ----------------------------------------
# Required only if using Vercel deployment API for generated sites
VERCEL_CLIENT_ID=your_vercel_client_id
VERCEL_CLIENT_SECRET=your_vercel_client_secret

# ----------------------------------------
# Environment
# ----------------------------------------
NODE_ENV=development
